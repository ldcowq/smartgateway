<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homeEnvironment.homeEnvironmenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/temp_image"
                    android:layout_weight="1"

                    android:layout_height="50dp"
                    android:layout_marginVertical="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/temp_icon"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/humi_image"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginVertical="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/humi_icon"
                    tools:ignore="ContentDescription"
                    android:layout_width="0dp" />

                <ImageView
                    android:id="@+id/carbon_image"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginVertical="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/carbon_icon"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/smoke_image"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginVertical="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/smoke_icon"
                    tools:ignore="ContentDescription" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/temp_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="26dp"
                    android:layout_marginVertical="19dp"
                    android:layout_marginStart="5dp"
                    android:text="室内温度"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/humi_textview"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="26dp"
                    android:layout_marginVertical="19dp"
                    android:layout_marginStart="5dp"
                    android:text="相对湿度"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/carbon_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="26dp"
                    android:layout_marginVertical="19dp"
                    android:layout_marginStart="5dp"
                    android:text="一氧化碳"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/smoke_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="26dp"
                    android:layout_marginVertical="19dp"
                    android:layout_marginStart="5dp"
                    android:text="烟雾浓度"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/homeEnvironment_swipe_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/homeEnvironment_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
</FrameLayout>